<% if (index) { %>
<article class="<%= item.layout %> article_index">
<% } else { %>
<article class="<%= item.layout %>">
<% } %>
  <% if (item.photos && item.photos.length){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <% if (item.layout == 'post'){ %>
      <header>
        <%- partial('post/title') %>
        <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
        <%- partial('post/category') %>
        <%- partial('post/tag') %>
        <% if (item.comments && config.disqus_shortname){ %>
          <div class="comment-link"><a href="<%- item.permalink %>#disqus_thread"><%= __('comment') %></a></div>
        <% } %>
      </header>
    <% } %>
    <% if (item.type == 'tagcloud') { %>
      <div class="tagcloud">
        <%- tagcloud(site.tags, {}) %>
      </div>
    <% } else { %>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    <% } %>
    </div>
    <% if (index) { %>
    <footer>
    <% } else { %>
    <footer class="border-bottom margin-top-large">
    <% } %>
      <% if (item.layout == 'post'){ %>
        <% if (index){ %>
          <% if (item.excerpt){ %>
            <div class="alignright">
              <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= __('read_more') %></a>
            </div>
          <% } %>
        <% } else { %>
          <%- partial('post/share') %>
        <% } %>
        <div class="clearfix"></div>
    <% } %>
    </footer>
  </div>
</article>

<% if (index) { %>
  <div class="post-divider"></div>
<% } else { %>
  <nav id="pagination" >
    <% if (page.next) { %>
      <a href="<%- config.root %><%- page.next.path %>" class="alignleft prev" ><%= __('prev_post') %>: <%= page.next.title %></a>
    <% } %>
    <% if (page.prev) { %>
      <a href="<%- config.root %><%- page.prev.path %>" class="alignright next" ><%= __('next_post') %>: <%= page.prev.title %></a>
    <% } %>
    <div class="clearfix"></div>
  </nav>
<% } %>

<% if (item.comments && config.disqus_shortname){ %>
  <%- partial('comment') %>
<% } %>
