<% if (page.comments && theme.gitalk.enable) { %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.css">
<script src="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.min.js"></script>
<script src="https://rawgit.com/qhh0205/78e9e0b1f3114db6737f3ed8cdd51d3a/raw/3894c5be5aa2378336b1f5ee0f296fa0b22d06e9/md5.min.js"></script>
<div id="gitalk-container" class="comment"></div>
<script type="text/javascript">
var gitalk = new Gitalk({
  clientID: '<%- config.gitalk.client_id %>',
  clientSecret: '<%- config.gitalk.client_secret %>',
  repo: '<%- config.gitalk.repo %>',
  owner: '<%- config.gitalk.owner %>',
  admin: ['<%- config.gitalk.admin %>'],
  id: md5(location.pathname),
  distractionFreeMode: <%- config.gitalk.distraction_free_mode %>
});
gitalk.render('gitalk-container');
</script>
<% } %>
