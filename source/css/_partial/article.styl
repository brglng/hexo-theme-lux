icon-size = 32px
icon-gap = 25px

article
  // box-shadow 1px 2px 3px #ddd
  // background #fff
  &.article_index
    margin-bottom 90px

  &.page
    padding-left 0
    .icon
      display none

  &.post
    .icon
      &:before
        content '\f016'

  &.photo
    .icon
      &:before
        content '\f030'

  &.link
    .icon
      &:before
        content '\f0c1'

    .title
      a
        &:after
          content '\f08e'
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super

  .post-content
    padding 0
    position relative
    @media screen and (max-width: 600px)
      padding-left 0

  .border-bottom
    border-bottom 1px solid color-border

  .gallery
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1

    img
      min-width 100%
      max-width 100%
      height auto
      position absolute
      top 0
      left 0
      opacity 0

    .control
      opacity 0
      transition 0.3s

    .prev, .next
      position absolute
      top 0
      width 50%
      height 100%
      cursor pointer
      &:before
        position absolute
        font 24px/1 font-icon
        text-align center
        width 24px
        text-shadow 0 0 15px rgba(0,0,0,0.5)
        color #fff
        margin-top -12px
        top 50%

    .prev
      left 0
      &:before
        content '\f053'
        left 10px

    .next
      right 0
      &:before
        content '\f054'
        right 10px

  header
    text-align center
    margin-bottom 40px

    .icon
      width icon-size
      height icon-size
      margin-right icon-gap
      position absolute
      top 20px
      left 20px
      color color-link
      @media screen and (max-width: 600px)
        display none
      &:before
        position absolute
        font 32px font-icon
        top 0
        left 0
        width 32px
        text-align center

    time
      font 0.9em font-title
      margin-top 5px
      margin-left 10px
      margin-right 10px
      display inline
      line-height 1

      a
        color color-meta

    .categories, .tags, .comment-link
      color color-meta
      font-size 0.9em
      position relative
      margin-top 5px
      margin-left 10px
      margin-right 10px
      display inline
      &:before
        position relative
        font 1.1em font-icon

      a
        color color-meta

    .categories
      &:before
        content '\f07b'
        top 2px
        left 1px
        margin-right 10px

    .comment-link
      &:before
        font font-icon
        content '\f075'
        top 1px
        margin-right 5px

    .tags
      &:before
        content '\f02b'
        top 1px
        left 2px
        margin-right 5px

    .title
      font-weight normal
      text-align center
      a
        color color-font
        &:hover
          color color-link
          text-decoration none

  .entry
    text-align left
    line-height 1.6
    p, blockquote, ul, ol, dl, table, iframe, h3, h4, h5, h6, .video-container
      margin-top 15px

    a
      text-decoration underline

    table
      border-collapse collapse
      border-spacing 0
      empty-cells show
      border 1px solid lighten(color-border, 2)
      width 100%

      th
        white-space nowrap
        color color-font
        font-weight 600
        background #eee

      td,
      th
        border 1px solid lighten(color-border, 2)
        padding 8px 16px
        text-align left

    blockquote
      border-top 1px solid color-border
      border-bottom 1px solid color-border
      font-style italic
      font-family font-serif
      font-size 1.2em
      padding 0 30px 15px
      text-align center
      footer
        border-top none
        font-size 0.8em
        line-height 1
        margin 20px 0 0
        padding-top 0
        cite
          &:before
            content 'â€”'
            color #ccc
            padding 0 0.5em

    code, pre
      font-family font-mono

    code
      background #eee
      color #666
      padding 0 5px
      margin 0 2px
      font-size 0.9em
      border 1px solid color-border
      border-radius 3px

    pre
      background #eee
      border 1px solid color-border
      margin-top 15px
      overflow auto
      padding 7px 15px
      border-radius 2px
      code
        background none
        padding 0
        margin 0
        border none
        border-radius 0

    ul, ol, dl
      margin-left 20px
      ul, ol, dl
        margin-top 0

    h1, h2
      font-weight normal
      text-align center
      padding-bottom 10px
      margin-top 20px

    h3, h4, h5, h6
      font-weight normal
      text-align center

    img, video
      max-width 100%
      height auto
      border none

    iframe
      border none

    .caption
      display block
      margin-top 5px
      color color-meta
      position relative
      font-size 0.9em
      padding-left 25px
      &:before
        content '\f040'
        position absolute
        font 1.3em font-icon
        position absolute
        left 0
        top 3px

    .video-container
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
      iframe, object, embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin-top 0

    .pullquote
      float right
      border none
      padding 0
      margin 1em 0 0.5em 1.5em
      text-align left
      width 45%
      font-size 1.5em

  .tagcloud
    text-align center

    a
      margin-left 15px
      margin-right 15px
      display inline-block

  footer
    padding-top 5px
    padding-bottom 5px
    color color-meta
    font-size 0.9em
    line-height 16px
    position relative
    min-height 16px
    text-align center
    margin-bottom 15px

    a
      color color-meta
      &:hover
        color color-link
        text-decoration none
      &:before
        font 1.1em font-icon
        padding-right 10px
        vertical-align middle

      &.more-link
        &:before
          content '\f054'

      &.comment-link
        &:before
          content '\f075'

    .categories, .tags
      position relative
      padding-left 25px
      margin 5px 0
      &:before
        position absolute
        font 1.1em font-icon

    .categories
      &:before
        content '\f07b'
        top 2px
        left 1px

    .tags
      &:before
        content '\f02b'
        top 3px
        left 2px

    .addthis
      margin-top 15px
      iframe
        margin-top 0

    .bdshare
      float left
      position relative
      left 50%
      margin-left -160px

    .post-divider
      margin 120px 35% 20px
      width 30%
      border-top 1px solid color-border
